@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Product List</h2>
            </div>
       
    </div>
</div>
<div class="col-12">
<table id="product"class= "table table-hover"style="width:100%">
    <thead>
        <tr class= "table-info">
            <th scope="col">
                Title
            </th>
            <th scope="col">
                ISBN
            </th>
            <th scope="col">
                Price (in USD)
            </th>
            <th scope="col">
                Author    
            </th>
            <th scope="col">
                Category 
            </th>
            <th scope="col">
               
            </th>
            
        </tr>
    </thead>
</table>
</div>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-9"></div>
        <div class="col-3 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-outline-primary"> 
                Add New Product
                <i class="bi bi-plus"> </i>
                </a>
            
        </div>
       
    </div>
</div>
@section Scripts{
    <script src="/js/product.js"></script>
}