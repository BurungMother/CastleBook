@model ShoppingCart
<form method="post">
   <input hidden asp-for="ProductId" />
        <div class="card  container pt-1 bg-light">
            <div class="card-header bg-primary text-light row ">
                <div class="col-12 col-md-6">
                    <h1 class="text-white">@Model.Product.Title</h1>
                    <p class="text-white-50">by @Model.Product.Author</p>
                </div>
                <div class="col-12 col-md-6 text-end pt-4">
                    <span class="badge bg-info pt-2" style="height:30px;">@Model.Product.coverType.Name</span>
                    <span class="badge bg-warning pt-2" style="height:30px;">@Model.Product.category.Name</span>
                </div>
            </div>
            <div class="card-body row container">
                <div class="container rounded p-2 bg-light">
                    <div class="row bg-light">
                        <div class="col-1 col-lg-3 offset-lg-1 ">
                                <img src="@Model.Product.ImageUrl" width="100%"  class="rounded" />
                          </div>
                        <div class="col-8 col-md-8">
                            
                            <div class="row pl-2">
                                <h5 class="text-dark">ISBN : @Model.Product.ISBN</h5>
                            </div>
                            <div class="row pl-2">
                                <h5 class="text-dark pb-2">List Price: <strike><b>@Model.Product.Listprice.ToString("c")</b></strike></h5>
                            </div>

                            <div class="row text-center pl-2">
                                <div class="p-1 col-2 bg-info border-bottom">
                                    <div class="text-light">Quantity</div>
                                </div>
                                <div class="p-1 col-2 bg-info border-bottom">
                                    <div class="text-light">1-50</div>
                                </div>
                                <div class="p-1 col-2 bg-info border-bottom">
                                    <div class="text-light">51-100</div>
                                </div>
                                <div class="p-1 col-2 bg-info border-bottom">
                                    <div class="text-light">100+</div>
                                </div>
                            </div>
                            <div class="row text-center pl-2" style="color:white; font-weight:bold">
                                <div class="p-1 col-2 bg-info">
                                    <div>Price</div>
                                </div>
                                <div class="p-1 col-2 bg-info">
                                    <div><b>$@Model.Product.Price.ToString("0.00") </b> </div>
                                </div>
                                <div class="p-1 col-2 bg-info">
                                    <div><b>$@Model.Product.Price50.ToString("0.00") </b></div>
                                </div>
                                <div class="p-1 col-2 bg-info">
                                    <div><b>$@Model.Product.Price100.ToString("0.00")</b></div>
                                </div>
                            </div>
                            <div class="row pl-2">
                                <p class="text-dark">@Html.Raw(Model.Product.Description)</p>
                            </div>
                            <div class="row pl-2">
                                <div class="col-3 text-primary"><h4>Quantity</h4></div>
                                <div class="col-9"><input asp-for="Count" class="form-control"  /></div>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
            <div class="card-footer ">
                <div class="row">
                    <div class="col-12 col-md-6 pb-5">
                        <a class=" btn btn-outline-warning  form-control " style="height:50px;" asp-action="Index">Back to Home</a>
                    </div>
                    <div class="col-12 col-md-6 pb-5">
                        <button type="submit" value="Add to Cart" class="btn btn-outline-success  form-control" style="height:50px;"><i class="bi bi-cart-plus"></i>   Add to Cart</button>
                    </div>
                </div>
            </div>
        </div>
</form>

